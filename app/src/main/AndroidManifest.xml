<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rubenvel.ligaaguila">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/colombia"
        android:label="@string/app_name"
        android:roundIcon="@drawable/colombia"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SesionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".InicioActivity"
            android:label="@string/registro" />
        <activity
            android:name=".NoticiasActivity"
            android:label="@string/actualidad"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".content.NoticiaContentActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".UserActivity" android:label="@string/perfil"></activity>
    </application>

</manifest>